    <script>
            
            $(document).ready(function(){
                $('.nav-link').click(function(){
                    if($(this).hasClass('active'))
                    {
                        $(this).addClass('active');
                    }
                    else
                    {
                        $('.nav-link').removeClass('active');
                        $(this).addClass('active');
                    }
                });
                $('.navbar-brand').click(function(){
                    $('.nav-link').removeClass('active');
                })
            });
            $(document).ready(function(){
                $(document).on('click','.js-scroll-trigger',function(){
                    var target = $(this).attr('href');
                    var headerHeight = $('.navbar').outerHeight();
                    
                    $('html').animate({scrollTop:$(target).offset().top - headerHeight}, 500);
                    
                    return false;
                });
            });
            // $(document).ready(function(){
            //     $('nav .container .navbar-toggler').click(function(){
            //         $('.navbar-collapse .navbar-nav').slideDown();
            //     })
            //     $('.nav-link').click(function(){
            //         $('nav .navbar-collapse .navbar-nav').slideUp();
            //     })
            // });

            


    </script>
