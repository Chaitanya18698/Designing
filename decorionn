            var cls= 'li';
            var c=0;
            $(document).ready(function(){
                $(cls).click(function(){
                    c=c+1;
                    $('p').not($(this)).removeClass('active');
                    $(this).find('p').addClass('active');
                    $(cls).find('.fa-angle-down').removeClass("icon");
                    $(this).find('.fa-angle-down').addClass("icon");


                    // if($('p').display!='none')
